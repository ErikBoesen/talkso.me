<% if object.errors.any? %>
    <div class="alert alert-danger">
        <p>Please fix the following <%= pluralize(object.errors.count, "error") %>:</p>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>