<% if @user.errors.any? %>
    <div class="alert alert-danger">
        <p>Please fix the following <%= pluralize(@user.errors.count, "error") %>:</p>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>