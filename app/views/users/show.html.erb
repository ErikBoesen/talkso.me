<% provide(:title, @user.name) %>
<section class="user-info">
    <%= gravatar_for @user %>
    <div class="names">
        <h1><%= @user.name %></h1>
        <h2>@<%= @user.username %></h2>
    </div>
    <%= render 'shared/stats' %>
    <%= render 'follow_form' if logged_in? %>
</section>
<%= render 'shared/post_form' if current_user?(@user) %>
<section>
    <% if @user.posts.any? %>
        <ol class="posts">
            <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
    <% end %>
</section>
